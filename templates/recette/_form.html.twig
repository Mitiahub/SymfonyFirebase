{{ form_start(form) }}
    {{ form_row(form.nom, { 'label': 'Nom de la recette' }) }}
    {{ form_row(form.tempsCuisson, { 'label': 'Temps de cuisson (en minutes)' }) }}
    {{ form_row(form.description, { 'label': 'Description' }) }}
    {{ form_row(form.imageUrl, { 'label': 'URL de l’image' }) }}
    
    <h3>Ingrédients</h3>
    <div id="ingredients-container">
        {% for ingredientForm in form.recetteIngredients %}
            <div class="ingredient-item">
                {{ form_row(ingredientForm.ingredient, { 'label': 'Ingrédient' }) }}
                {{ form_row(ingredientForm.quantite, { 'label': 'Quantité' }) }}
            </div>
        {% endfor %}
    </div>

    <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
